<div class="page-header">
	<h2>Users {{#link-to 'users.new' class='btn btn-success pull-right'}}Add new{{/link-to}}</h2>
</div>

<table class="table table-striped">
	<thead>
	    <tr>
	        <th>First Name</th>
	        <th>Last Name</th>
	        <th>Email</th>
	        <th>Points</th>
	        <th class="text-right">Action</th>
	    </tr>
	</thead>
	<tbody>

		{{#each model as |user|}}
	    <tr>
	        <td>{{user.fname}}</td>
	        <td>{{user.lname}}</td>
	        <td>{{user.email}}</td>
	        <td>{{user.points}}</td>
	        <td class="text-right">
	        	{{#link-to 'users.show' user class='btn btn-default'}}View{{/link-to}}
				{{#link-to 'users.edit' user class='btn btn-default'}}Edit{{/link-to}}
	        </td>
	    </tr>
	    {{else}}
	    	<p>Sorry, nobody is here</p>
	    {{/each}}
	</tbody>
</table>

<p><strong>Total users:</strong> {{totalItems}}<br />
<strong>Total points:</strong> {{pointsSum}}<br />
<strong>Average points/user:</strong> {{averagePoints}}</p>