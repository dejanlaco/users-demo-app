<form>
	<div class="form-group">
		<label for="fname">First name</label>
		{{input value=user.fname id="fname" class="form-control" placeholder="First name"}}
	</div>
	<div class="form-group">
		<label for="lname">Last name</label>
		{{input value=user.lname id="lname" class="form-control" placeholder="Last name"}}
	</div>
	<div class="form-group">
		<label for="email">Email</label>
		{{input value=user.email id="email" class="form-control" placeholder="Email"}}
	</div>

	<button {{action 'save' user}} class="btn btn-default">Save user</button>

</form>

{{yield}}