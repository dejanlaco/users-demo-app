
	<div class="form-group">
		<label for="fname">First name</label>
		{{one-way-input value=changeset.fname id="fname" class="form-control" update=(action (mut changeset.fname))}}
	</div>
	<div class="form-group">
		<label for="lname">Last name</label>
		{{one-way-input value=changeset.lname id="lname" class="form-control" update=(action (mut changeset.lname))}}
	</div>
	<div class="form-group">
		<label for="email">Email</label>
		{{one-way-input value=changeset.email id="email" class="form-control" update=(action (mut changeset.email))}}
	</div>
	<div class="form-group">
		<label for="points">Points</label>
		{{one-way-input value=changeset.points id="points" class="form-control" update=(action (mut changeset.points))}}
		{{display-errors errors=errors.model.points showErrors=showErrors}}
	</div>

	<ul>
		{{#each changeset.errors as |errorSet|}}
			{{#each errorSet.validation as |error|}}
				<li>{{error}}</li>
			{{/each}}
		{{/each}}
	</ul>

	<button {{action 'save'}} class="btn btn-default">Save</button>