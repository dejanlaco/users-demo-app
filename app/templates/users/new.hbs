{{outlet}}

<div class="page-header">
	<h2>Add user</h2>
</div>

{{#bs-form model=model onSubmit=(action 'save') as |form|}}
	{{form.element label="First name" controlType="text" property="fname"}}
	{{form.element label="Last name" controlType="text" property="lname"}}
	{{form.element label="Email" controlType="email" property="email"}}
	{{form.element label="Points" controlType="points" property="points" required=true}}
	{{bs-button defaultText="Submit" type="default" buttonType="submit"}}
{{/bs-form}}