<div class="page-header">
	<h2>Edit user: {{model.fname}} {{model.lname}}</h2>
</div>

<form>
	<div class="form-group">
		<label for="fname">First name</label>
		{{input value=model.fname id="fname" class="form-control" placeholder="First name"}}
	</div>
	<div class="form-group">
		<label for="lname">Last name</label>
		{{input value=model.lname id="lname" class="form-control" placeholder="Last name"}}
	</div>
	<div class="form-group">
		<label for="email">Email</label>
		{{input value=model.email id="email" class="form-control" placeholder="Email"}}
	</div>
	<div class="form-group">
		<label for="points">Points</label>
		{{input value=model.points id="points" class="form-control" placeholder="Points"}}
	</div>

	<button {{action 'save' model}} class="btn btn-default">Save user</button>

</form>